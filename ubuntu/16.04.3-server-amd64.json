      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vmx_data": {
        "ethernet0.dvs.portgroupid": "{{ user `ethernet0.dvs.portgroupid` }}",
        "ethernet0.dvs.switchid": "{{ user `ethernet0.dvs.switchid` }}",
        "ethernet0.startconnected": "TRUE"
      },
      "vnc_bind_address": "{{ user `vnc_bind_address` }}",
      "vnc_disable_password": true
    }
  ],
  "post-processors": [
    {
      "only": [
        "virtualbox-iso"
      ],
      "output": "{{ template_dir }}/../boxes/packer_{{ .BuildName }}_{{ .Provider }}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | sudo -S env {{ .Vars }} {{ .Path }}",
      "inline": [
        "sudo apt-get update",
        "sudo apt-get install -y python-pip",
        "sudo pip install ansible",
        "echo 'vagrant ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers.d/vagrant"
      ],
      "type": "shell"
    },
    {
      "clean_staging_directory": false,
      "extra_arguments": [
        "--skip-tags",
        "bootstrap,client,server,virtualbox-iso"
      ],
      "playbook_dir": "{{ template_dir }}/configuration",
      "playbook_file": "{{ template_dir }}/configuration/playbook.yml",
      "staging_directory": "/home/vagrant/packer-provisioner-ansible-local",
      "type": "ansible-local"
    },
    {
      "extra_arguments": [
        "--tags",
        "virtualbox-iso"
      ],
      "only": [
        "virtualbox-iso"
      ],
      "playbook_dir": "{{ template_dir }}/configuration",
      "playbook_file": "{{ template_dir }}/configuration/playbook.yml",
      "type": "ansible-local"
    },
    {
      "destination": "{{ template_dir }}/../boxes/ansible.crt",
      "direction": "download",
      "source": "/usr/local/share/ca-certificates/ansible.crt",
      "type": "file"
    }
  ],
  "_comment": "ethernet0.dvs is for vSphere Distributed Switch configurations",
  "variables": {
    "accelerator": "none",
    "headless": "true",
    "http_directory": "http",
    "iso_checksum": "a06cd926f5855d4f21fb4bc9978a35312f815fbda0d0ef7fdc846861f4fc4600",
    "iso_checksum_type": "sha256",
    "iso_url": "http://releases.ubuntu.com/16.04.3/ubuntu-16.04.3-server-amd64.iso",
    "memory": "2048",
    "qemu_binary": "/usr/local/bin/qemu-system-x86_64",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "ssh_wait_timeout": "10000s",
    "vnc_bind_address": "0.0.0.0",

    "ethernet0.dvs.portgroupid": "",
    "ethernet0.dvs.switchid": ""
  }
