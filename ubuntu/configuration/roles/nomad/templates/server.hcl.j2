addresses {
  http = "0.0.0.0"
}

bind_addr = "{{ ansible_enp0s8.ipv4.address }}"

data_dir = "/var/lib/nomad"

server {
  bootstrap_expect = 1
  enabled          = true
}

leave_on_interrupt = true

leave_on_terminate = true

vault {
  address = "http://vault.service.consul:8200"
  enabled = true
  token   = "{{ root_token }}"
}
